select o1_0.item_id,o1_0.id,o2_0.id,o2_0.purchased_at,s1_0.id,s1_0.type,o2_0.sum,u1_0.id,u1_0.balance,u1_0.email,u1_0.logo_url,u1_0.nickname,r1_0.id,r1_0.name,o3_0.id,o3_0.type,o1_0.price,o1_0.quantity from ordered_items o1_0 left join order o2_0 on o2_0.id=o1_0.order_id left join status s1_0 on s1_0.id=o2_0.status_id left join users u1_0 on u1_0.id=o2_0.user_id left join roles r1_0 on r1_0.id=u1_0.role_id left join ordered_item_status o3_0 on o3_0.id=o1_0.ordered_item_status_id where o1_0.item_id=?]
